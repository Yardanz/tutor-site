generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model Post {
  id                Int         @id @default(autoincrement())
  title             String
  slug              String      @unique
  content           String
  tags              String[]
  isPinned          Boolean     @default(false)
  isPublished       Boolean     @default(false)
  coverAttachmentId Int?
  publishedAt       DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  attachments       Attachment[] @relation("PostAttachments")
  coverAttachment   Attachment? @relation("PostCover", fields: [coverAttachmentId], references: [id], onDelete: SetNull)
}

model Attachment {
  id            Int      @id @default(autoincrement())
  postId        Int
  filename      String
  mimeType      String
  size          Int
  url           String
  createdAt     DateTime @default(now())
  post          Post     @relation("PostAttachments", fields: [postId], references: [id], onDelete: Cascade)
  coverForPosts Post[]   @relation("PostCover")
}
